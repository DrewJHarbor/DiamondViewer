# HARBOR Diamond Viewer - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# Twilio Configuration (for SMS)
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Resend Configuration (for Email)
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@harbordiamonds.com

# Flask Session Secret (already configured, no need to change)
SESSION_SECRET=harbor-diamond-viewer-secret
